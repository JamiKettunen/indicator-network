<!-- this describes a setting+menu hierarchy -->
<settings>
	<enums>
		<enum id="org.gnome.system.gvfs.GDnsSdDisplayMode">
			<value nick="disabled" value="Atlantic/Canary">
				<_display_name>Atlantic/Canary</_display_name>
			</value>
			<value nick="disabled" value="">
				<_display_name>Europe/London</_display_name>
			</value>
			<!-- more values here -->
		</enum>
	</enums>
	<group id="com.ubuntu.system.time"
	       path="/com/ubuntu/system/time"
	       tablet:icon="time.png">

		<_display_name>General</_display_name>
		
		<key type="s" name="timezone" tablet:widget="com.ubuntu.widgets.pickers.timezone">
			<default>Atlantic/Canary</default>
			<_summary>Timezone of the system</_summary>
			<_description>This setting allows you to select the timezone for your system</_description>
		</key>
	</group>
	<!-- additional groups may go here -->
</settings>
